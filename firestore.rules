rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isFriend(appId, userId) {
      let stats = get(/databases/$(database)/documents/artifacts/$(appId)/public_user_stats/$(userId));
      return stats.data != null &&
             stats.data.friends != null &&
             request.auth.uid in stats.data.friends;
    }

    function isOwnerOrFriend(appId, userId) {
      return request.auth != null && (
        request.auth.uid == userId ||
        isFriend(appId, userId)
      );
    }

    // R√®gles pour les soir√©es - accessibles au propri√©taire et √† ses amis
    match /artifacts/{appId}/users/{userId}/parties/{partyId} {
      allow read: if isOwnerOrFriend(appId, userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // R√®gles pour les badges - accessibles au propri√©taire et √† ses amis
    match /artifacts/{appId}/users/{userId}/badges/{badgeId} {
      allow read: if isOwnerOrFriend(appId, userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // R√®gles pour les profils - accessibles au propri√©taire et √† ses amis (pour les badges d√©bloqu√©s)
    match /artifacts/{appId}/users/{userId}/profile/{profileDoc} {
      allow read: if isOwnerOrFriend(appId, userId);
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // R√®gles pour les autres donn√©es utilisateur (donn√©es strictement priv√©es)
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // R√®gles pour les statistiques publiques (lisibles par tous les utilisateurs authentifi√©s)
    match /artifacts/{appId}/public_user_stats/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // R√®gles pour les profils publics (utilis√©s pour l'affichage des amis)
    match /artifacts/{appId}/profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // R√®gles pour les demandes d'amis
    match /artifacts/{appId}/friend_requests/{requestId} {
      allow read: if request.auth != null && (
        request.auth.uid == resource.data.from ||
        request.auth.uid == resource.data.to
      );
      allow create: if request.auth != null && request.auth.uid == request.resource.data.from;
      allow update: if request.auth != null && request.auth.uid == resource.data.to;
      allow delete: if request.auth != null && (
        request.auth.uid == resource.data.from ||
        request.auth.uid == resource.data.to
      );
    }
    
    // R√®gles pour les groupes
    match /artifacts/{appId}/groups/{groupId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
        (request.auth.uid in resource.data.members || request.auth.uid in resource.data.admins);
      allow delete: if request.auth != null && request.auth.uid in resource.data.admins;
    }
    
    // R√®gles pour les donn√©es globales publiques
    match /artifacts/{appId}/global/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // R√®gles pour les souvenirs publics des groupes
    match /artifacts/{appId}/group_memories/{memoryId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // R√®gles pour les interactions du feed (likes, commentaires, f√©licitations)
    match /artifacts/{appId}/feed_interactions/{interactionId} {
      // Lecture : autoris√©e pour tous les utilisateurs authentifi√©s
      // (n√©cessaire pour voir les interactions des amis)
      allow read: if request.auth != null;
      
      // Cr√©ation et mise √† jour : autoris√©es pour tous les utilisateurs authentifi√©s
      // (permet √† n'importe qui d'ajouter un like ou commentaire)
      allow create, update: if request.auth != null;
      
      // Suppression : seulement par un utilisateur authentifi√©
      // (TODO: am√©liorer pour ne permettre que la suppression de ses propres interactions)
      allow delete: if request.auth != null;
    }

    // R√®gles pour les tournois Battle Royale
    match /artifacts/{appId}/tournaments/{tournamentId} {
      // Lecture : autoris√©e pour tous les utilisateurs authentifi√©s
      allow read: if request.auth != null;

      // Cr√©ation : seulement par l'utilisateur qui cr√©e le tournoi
      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;

      // Mise √† jour : seulement le cr√©ateur ou les participants
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.createdBy || 
         request.auth.uid in resource.data.participants);

      // Suppression : seulement le cr√©ateur
      allow delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    // R√®gles pour les d√©fis flash Battle Royale
    match /artifacts/{appId}/flashChallenges/{challengeId} {
      allow read: if request.auth != null;

      allow create: if request.auth != null && request.resource.data.createdBy == request.auth.uid;

      allow update, delete: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }

    // R√®gles pour les lieux (venues) - contr√¥le territorial
    match /artifacts/{appId}/venues/{placeId} {
      // Lecture : autoris√©e pour tous les utilisateurs authentifi√©s
      allow read: if request.auth != null;

      // Cr√©ation/mise √† jour : autoris√©e pour tous (contr√¥le automatique)
      allow write: if request.auth != null;
    }

    // R√®gles pour les contr√¥les de lieux (venueControls)
    match /artifacts/{appId}/venueControls/{controlId} {
      // Lecture : autoris√©e pour tous les utilisateurs authentifi√©s
      allow read: if request.auth != null;

      // √âcriture : autoris√©e pour tous (syst√®me de points automatique)
      allow write: if request.auth != null;
    }
    
    // üí¨ R√®gles pour le syst√®me de chat (messagerie priv√©e)
    match /chats/{chatId} {
      // Lecture/√©criture : seulement les participants du chat
      allow read, write: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      
      // Cr√©ation : autoriser si l'utilisateur est dans les participants
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Messages dans le chat
      match /messages/{messageId} {
        // Lecture : tous les participants peuvent lire
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Cr√©ation : l'utilisateur doit √™tre l'exp√©diteur
        allow create: if request.auth != null && 
          request.auth.uid == request.resource.data.senderId;
        
        // Mise √† jour/suppression : seulement l'exp√©diteur
        allow update, delete: if request.auth != null && 
          request.auth.uid == resource.data.senderId;
      }
    }
    
    // üì∏ R√®gles pour le syst√®me de stories (24h)
    match /stories/{storyId} {
      // Lecture : tous les utilisateurs authentifi√©s
      allow read: if request.auth != null;
      
      // Cr√©ation : l'utilisateur doit √™tre le propri√©taire
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
      
      // Mise √† jour : seulement pour ajouter des vues
      allow update: if request.auth != null && (
        // Propri√©taire peut tout modifier
        request.auth.uid == resource.data.userId ||
        // Autres utilisateurs peuvent ajouter leur vue
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'viewCount']))
      );
      
      // Suppression : seulement le propri√©taire
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.userId;
    }
    
    // Refuser tout autre acc√®s
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
